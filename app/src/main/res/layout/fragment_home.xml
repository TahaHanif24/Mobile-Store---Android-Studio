<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home Page"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="italic"
                android:layout_marginLeft="15dp"
                android:textSize="30sp" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="@color/black"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="1000px"
            android:layout_height="400px"
            android:autoStart="true"
            android:flipInterval="2500"
            android:layout_marginBottom="30dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/flipper7"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/flipper8"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/flipper3"
                android:scaleType="fitXY" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/flipper5"
                android:scaleType="fitXY" />
        </ViewFlipper>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Arrival..."
                android:fontFamily="arial"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/see_all_newarrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:clickable="true"
                android:layout_marginLeft="170dp"
                android:fontFamily="arial"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/newArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/home_page_ilst" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommendation..."
                android:fontFamily="arial"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/see_all_recommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:clickable="true"
                android:layout_marginLeft="115dp"
                android:fontFamily="arial"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="60dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/home_page_ilst" />

    </LinearLayout>
</LinearLayout>
